<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Slider?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text text="Price criterion"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <Text id="priceMinimum" text="Minimum price" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Text id="priceMaximum" text="Maximum price" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField
            GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Slider id="priceSlider" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="3" max="100" min="0"/>


    <Label text="Voltage criterion"
           GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" GridPane.valignment="CENTER"/>

    <Text id="voltageMinimum" text="Minimum voltage" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Text id="voltageMaximum" text="Maximum voltage" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <TextField
            GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <Slider id="voltageSlider" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="7" max="100"
            min="0"/>


</GridPane>