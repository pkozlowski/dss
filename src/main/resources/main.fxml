<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane fx:controller="org.pwr.ii.gui.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text text="Price criterion"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <Text text="Minimum price" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Text text="Maximum price" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField id="priceMinimum"
               GridPane.columnIndex="0" GridPane.rowIndex="2">5
    </TextField>
    <TextField id="priceMaximum"
               GridPane.columnIndex="1" GridPane.rowIndex="2">20
    </TextField>
    <Slider id="priceSlider" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="3" max="100" min="0"
            value="50"/>


    <Label text="Voltage criterion"
           GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" GridPane.valignment="CENTER"/>

    <Text text="Minimum voltage" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Text text="Maximum voltage" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <TextField id="voltageMinimum"
               GridPane.columnIndex="0" GridPane.rowIndex="6">30
    </TextField>
    <TextField id="voltageMaximum"
               GridPane.columnIndex="1" GridPane.rowIndex="6">45
    </TextField>
    <Slider id="voltageSlider" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="7" max="100"
            min="0" value="50"/>
    <Button id="findButton" text="Find!" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="8"
            GridPane.halignment="CENTER"/>

</GridPane>